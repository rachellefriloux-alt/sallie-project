# Sallie AI Companion - Environment Configuration Example
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=development
APP_ENV=development

# API Configuration
API_BASE_URL=http://localhost:3000
AI_API_ENDPOINT=https://api.openai.com/v1
AI_API_KEY=your-openai-api-key-here

# Firebase Configuration (if using Firebase)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Database Configuration
DATABASE_URL=sqlite://./sallie-local.db
REDIS_URL=redis://localhost:6379

# Encryption Keys (Generate secure keys for production)
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here

# Development Features
DEBUG_MODE=true
VERBOSE_LOGGING=true
PERFORMANCE_MONITORING=false
MOCK_AI_RESPONSES=false

# Platform Specific
ANDROID_APP_ID=com.sallie.app
IOS_BUNDLE_ID=com.sallie.app
WEB_APP_URL=http://localhost:3000

# External Services
VOICE_SERVICE_API_KEY=your-voice-service-key
TTS_SERVICE_ENDPOINT=https://api.elevenlabs.io/v1
ANALYTICS_KEY=your-analytics-key

# Security Settings
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=1000
SESSION_TIMEOUT=86400

# Feature Flags
ENABLE_VOICE_CHAT=true
ENABLE_VISUAL_AVATAR=true
ENABLE_SYSTEM_INTEGRATION=false
ENABLE_CLOUD_SYNC=true
ENABLE_OFFLINE_MODE=true
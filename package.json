{
  "name": "sallie-project",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "web": "react-scripts start",
    "test": "jest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:android-bundle": "cd android && ./gradlew bundleRelease",
    "build:ios": "cd ios && xcodebuild -workspace SallieApp.xcworkspace -scheme SallieApp -configuration Release",
    "build:web": "react-scripts build",
    "setup-web": "npm run install-web-deps && npm run configure-web",
    "install-web-deps": "npm install --save-dev @types/web",
    "configure-web": "echo 'Web configuration completed'",
    "configure-services": "node scripts/configure-services.js",
    "debug": "npx react-native start --debugger-ui",
    "debug-remote": "npx react-native start --remote-debugging",
    "debug-chrome": "npx react-native start --experimental-debugger",
    "monitor": "npx react-native log-android & npx react-native log-ios",
    "monitor-network": "npx flipper",
    "monitor-memory": "npx react-native profile-hermes",
    "clean": "npx react-native clean",
    "clean:android": "cd android && ./gradlew clean",
    "clean:ios": "cd ios && rm -rf build && rm -rf Pods && pod install",
    "reset-cache": "npx react-native start --reset-cache",
    "postinstall": "npx pod-install ios"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-native": "^0.72.0",
    "react-native-web": "^0.19.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^24.7.0",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "typescript": "^5.0.0"
  }
}
